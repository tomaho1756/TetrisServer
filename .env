# 테트리스 멀티플레이어 서버 환경 변수

# 데이터베이스 설정
DATABASE_URL=sqlite:tetris.db

# JWT 시크릿 키 (프로덕션에서는 안전한 랜덤 키로 변경하세요)
JWT_SECRET=tetris-super-secret-key-2024-change-me-in-production

# 서버 설정
HOST=0.0.0.0
PORT=3000

# 로그 레벨 (TRACE, DEBUG, INFO, WARN, ERROR)
RUST_LOG=info

# CORS 설정
CORS_ORIGIN=*

# 게임 설정
DEFAULT_RATING=1000
MAX_GAMES_PER_USER=10
GAME_TIMEOUT_MINUTES=30
ROOM_TIMEOUT_MINUTES=60

# WebSocket 설정
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL_SECONDS=30
WS_TIMEOUT_SECONDS=60

# 보안 설정
BCRYPT_COST=12
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# 파일 업로드 설정
MAX_AVATAR_SIZE_MB=5
UPLOAD_PATH=./uploads

# 관리자 설정 (첫 번째 관리자 계정)
ADMIN_EMAIL=admin@tetris.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!

# Redis 설정 (선택사항 - 세션 저장용)
# REDIS_URL=redis://localhost:6379

# 메일 서버 설정 (선택사항 - 이메일 인증용)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-password

# 통계 및 모니터링
ENABLE_METRICS=true
METRICS_PORT=9090

# 개발 모드 설정
DEV_MODE=true
AUTO_MIGRATE=true
LOG_SQL_QUERIES=false
